@model IEnumerable<PandaTea.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Quantity, DatePurchased, MenuId, StoreId -->
<div id="order-container">
    <div id="heading">Purchase History</div>
    <div>
        <div id="sub-heading">2019</div>
        <h4>November</h4>

        <div class="line"></div>
        <div class="history-box">
            <div class="history-box-content">
                <div class="date">November 16, 2019</div>
                <div class="location">
                    <img src="../images/location.png" />
                    <div>Panda Tea, Waterloo, ON N1A 2B3</div>
                </div>
                <div class="order-total">
                    <img src="../images/money.png" />
                    <div>Order Total: $4.51</div>
                </div>
            </div>
            <div class="details-btn-content">
                <input id="details-btn" type="button" value="View Details" />
            </div>
        </div>

        <h4 style="margin-top: 50px;">October</h4>

        <div class="line"></div>
        <div class="history-box">
            <div class="history-box-content">
                <div class="date">October 27, 2019</div>
                <div class="location">
                    <img src="../images/location.png" />
                    <div>Panda Tea, Waterloo, ON N1A 2B3</div>
                </div>
                <div class="order-total">
                    <img src="../images/money.png" />
                    <div>Order Total: $14.66</div>
                </div>
            </div>
            <div class="details-btn-content">
                <input id="details-btn" type="button" value="View Details" />
            </div>
        </div>

        <div class="history-box" style="margin-top: 20px;">
            <div class="history-box-content">
                <div class="date">October 11, 2019</div>
                <div class="location">
                    <img src="../images/location.png" />
                    <div>Panda Tea, Waterloo, ON N1A 2B3</div>
                </div>
                <div class="order-total">
                    <img src="../images/money.png" />
                    <div>Order Total: $14.66</div>
                </div>
            </div>
            <div class="details-btn-content">
                <input id="details-btn" type="button" value="View Details" />
            </div>
        </div>
    </div>

    <div id="history-modal">
        <div class="history-modal-content">
            <div class="history-modal-heading">
                October 11, 2019
                <img src="~/images/close.png" alt="close-button" class="modal-close" />
            </div>
            <div class="modal-bbt-content">
            </div>

            <div class="modal-history-box" style="margin-top: 20px;">
                <div class="history-box-content">
                    <div id="small-title">Strawberry Explosion</div>
                    <div>Size: Large</div>
                    <div style="display: flex; flex-direction: row; justify-content: space-around;">
                        <div>Quantity: 1</div>
                        <div>Unit Price: FREE</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () { 
            $("#details-btn").click(function () {
                $("#history-modal").css("display", "block");
            });
        });
        $(".modal-close").click(function () {
            $("#history-modal").css("display", "none");
        });
    </script>
}